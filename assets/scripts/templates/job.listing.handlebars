{{#each jobs as |job|}}

        <!-- <h3 data-id="{{job.id}}"> <small>{{job.task}}</small></h3> -->

        <div class="task center-block" data-value={{id}}>
          <label data-id={{id}}>

            {{#if completed}}
              <input class="edit btn" type="checkbox" autocomplete="off" checked data-id={{id}}> <span class="task-name"> {{task}} <span>
            {{else}}
              <input class="edit btn" type="checkbox" autocomplete="off" data-id={{id}}> <span class="task-name"> {{task}} <span>
            {{/if}}
          </label>
          <button type="button" class="close task-close" aria-label="Close">
              <span aria-hidden="true" data-id={{id}}>&times;</span>
          </button>
        </div>
