<div id="confirm-delete-modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">Confirm Delete</h3>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete " {{task}} "?</p>
      </div>
      <div class="modal-footer">
        <button id="confirm-delete-btn" type="submit"  name="submit" value="delete" class="btn btn-danger btn-sm  btn-block confirm-delete-btn">Delete Item</button>
        <button type="button" data-dismiss="modal" class="btn btn-sm btn-block">Cancel</button>
      </div>
    </div>
  </div>
</div>
